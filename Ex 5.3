import numpy as np
matrix1 = np.array([[1,2],[3,4]])
matrix2 = np.array([[5,6],[7,8]])
matrix_add = matrix1 + matrix2
print("Element-wise Addition :\n",matrix_add)
matrix_sub = matrix1 - matrix2
print("Element-wise Subtraction :\n",matrix_sub)
matrix_mul = matrix1 * matrix2
print("Element-wise Multiplication :\n",matrix_mul)
matrix_prod = np.dot(matrix1,matrix2)
print("Matrix Multiplication :\n",matrix_prod)
matrix_transpose = np.transpose(matrix1)
print("Transpose of Matrix 1 :\n",matrix_transpose)
matrix_det = np.linalg.det(matrix1)
print("Determinant of Matrix 1 :\n",matrix_det)
matrix_inv = np.linalg.inv(matrix1)
print("Inverse of Matrix 1 :\n",matrix_inv)



